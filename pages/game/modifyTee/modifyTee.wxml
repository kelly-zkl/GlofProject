<view class='page'>
  <view class='page__bd'>
    <view class='weui-flex' style='margin-top:200rpx'>
      <view class='weui-flex__item'>
        <image class="weui-grid__icon img" src="../../../images/pic_160.png" />
        <view class="weui-grid__label" style="color:#999">微信昵称</view>
      </view>
    </view>
    <view class="weui-flex__item" style='text-align:center;margin:30px'>
      <view class="tui-tabbar-group">
        <view class="tui-tabbar-red {{radioType == 0 ? 'red-active' : ''}}"
          data-id="0" bindtap="douChange">红</view>
        <view class="tui-tabbar-white {{radioType == 1 ? 'white-active' : ''}}"
          data-id="1" bindtap="douChange">白</view>
        <view class="tui-tabbar-blue {{radioType == 2 ? 'blue-active' : ''}}"
          data-id="2" bindtap="douChange">蓝</view>
        <view class="tui-tabbar-black {{radioType == 3 ? 'black-active' : ''}}"
          data-id="3" bindtap="douChange">黑</view>
        <view class="tui-tabbar-golden {{radioType == 4 ? 'golden-active' : ''}}"
          data-id="4" bindtap="douChange">金</view>
      </view>
    </view>
  </view>
</view>