<view class="page">
  <view class="page__bd">
    <view class="weui-flex" style="background:#66CC99">
      <view style="padding-left:30rpx">
        <image src="../../../images/icon_intro.png" style="width:20px;height:20px"/>
        <image src="../../../images/icon_intro.png" style="width:20px;height:20px;padding-left:30rpx"/>
      </view>
      <view class="weui-flex__item text-size-14">
        <view style="color:#fff;text-align:center">比赛名称</view>
      </view>
      <view style="padding-right:30rpx">
        <image style="width:20px;height:20px;padding-right:30rpx"/>
        <image src="../../../images/icon_intro.png" style="width:20px;height:20px"/>
      </view>
    </view>
    <view class="weui-panel weui-panel_access" style="background:#66CC99;margin:0px">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_appmsg">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="../../../images/icon_intro.png"/>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" style="color:#fff">
            <view class="weui-media-box__title weui-media-box__title_in-text text-size-14">地址</view>
            <view class="weui-media-box__desc text-size-13" style="color:#fff">日期</view>
            <view class="weui-media-box__info" style="color:#fff">天气</view>
          </view>
        </view>
      </view>
    </view>
    <view class='weui-flex'>
      <view style="width: 120rpx; height: 120rpx;border-right:1rpx #e5e5e5 solid">
        <view class="weui-grid__label">球洞</view>
        <view class="weui-grid__label">球杆</view>
      </view>
      <scroll-view scroll-x="true" class='weui-flex__item'
        style="white-space: nowrap; display: flex;width:440px">
        <view style="width: 120rpx; height: 120rpx; display: inline-block;border-right:1rpx #e5e5e5 solid"
          wx:for='{{holes}}' wx:key="{{item}}">
          <view class="weui-grid__label">{{item.name}}</view>
          <view class="weui-grid__label">{{item.role}}</view>
        </view>
      </scroll-view>
      <view style="width: 120rpx; height: 120rpx">
        <view class="weui-grid__label">总分</view>
        <view class="weui-grid__label">72</view>
      </view>
    </view>
    <view class='weui-flex' style='background:#fff'>
      <view style="width: 120rpx; height: 120rpx;border-right:1rpx #e5e5e5 solid">
        <image class="weui-grid__icon s" src="../../../images/pic_160.png" />
        <view class="weui-grid__label text-size-12" style='color:#999'>用户1</view>
      </view>
      <scroll-view scroll-x="true" class='weui-flex__item'
        style="white-space: nowrap; display: flex;width:440px">
        <view style="width: 120rpx; height: 120rpx; display: inline-block;border-right:1rpx #e5e5e5 solid"
          wx:for='{{holes}}' wx:key="{{item}}" bindtap='togglePopup'>
          <view class="weui-grid__label">{{item.role}}</view>
        </view>
      </scroll-view>
      <view style="width: 120rpx; height: 120rpx">
        <view class="weui-grid__label">0</view>
      </view>
    </view>
    <view class='weui-flex' style='background:#fff'>
      <view style="width: 120rpx; height: 120rpx;border-right:1rpx #e5e5e5 solid">
        <image class="weui-grid__icon s" src="../../../images/pic_160.png" />
        <view class="weui-grid__label text-size-12" style='color:#999'>用户2</view>
      </view>
      <scroll-view scroll-x="true" class='weui-flex__item'
        style="white-space: nowrap; display: flex;width:440px">
        <view style="width: 120rpx; height: 120rpx; display: inline-block;border-right:1rpx #e5e5e5 solid"
          wx:for='{{holes}}' wx:key="{{item}}" bindtap='togglePopup'>
          <view class="weui-grid__label">{{item.role}}</view>
        </view>
      </scroll-view>
      <view style="width: 120rpx; height: 120rpx">
        <view class="weui-grid__label">72</view>
      </view>
    </view>
    <view class='weui-flex' style='background:#fff'>
      <view style="width: 120rpx; height: 120rpx;border-right:1rpx #e5e5e5 solid">
        <image class="weui-grid__icon s" src="../../../images/pic_160.png" />
        <view class="weui-grid__label text-size-12" style='color:#999'>用户3</view>
      </view>
      <scroll-view scroll-x="true" class='weui-flex__item'
        style="white-space: nowrap; display: flex;width:440px">
        <view style="width: 120rpx; height: 120rpx; display: inline-block;border-right:1rpx #e5e5e5 solid"
