          <view class="weui-grid__label">{{item.role}}</view>
        </view>
      </scroll-view>
      <view style="width: 120rpx; height: 120rpx">
        <view class="weui-grid__label">72</view>
      </view>
    </view>
    <view class='weui-flex' style='background:#fff'>
      <view style="width: 120rpx; height: 120rpx;border-right:1rpx #e5e5e5 solid">
        <image class="weui-grid__icon s" src="../../../images/pic_160.png" />
        <view class="weui-grid__label text-size-12" style='color:#999'>用户4</view>
      </view>
      <scroll-view scroll-x="true" class='weui-flex__item'
        style="white-space: nowrap; display: flex;width:440px">
        <view style="width: 120rpx; height: 120rpx; display: inline-block;border-right:1rpx #e5e5e5 solid"
          wx:for='{{holes}}' wx:key="{{item}}" bindtap='togglePopup'>
          <view class="weui-grid__label">{{item.role}}</view>
        </view>
      </scroll-view>
      <view style="width: 120rpx; height: 120rpx">
        <view class="weui-grid__label">72</view>
      </view>
    </view>
    <view class="weui-footer weui-footer_fixed-bottom" 
      style="padding:30rpx 30rpx 20rpx 30rpx;background:#fff;border-top:1rpx #e5e5e5 solid">
      <view class='weui-flex'>
        <navigator url='/pages/game/gameChat/gameChat'>
          <image src="../../../images/pic_160.png" style="width:60rpx;height:60rpx"/>
        </navigator>
        <view class="weui-flex__item" style='text-align:center'>
          <view class="tui-tabbar-group">
            <text class="tui-tabbar-cell {{radioType == 0 ? 'tui-active' : ''}}"
              data-id="0" bindtap="douChange">PK规则</text>
            <text class="tui-tabbar-cell {{radioType == 1 ? 'tui-active' : ''}}"
              data-id="1" bindtap="douChange">. . .</text>
            <text class="tui-tabbar-cell {{radioType == 2 ? 'tui-active' : ''}}"
              data-id="2" bindtap="douChange">记分卡</text>
          </view>
        </view>
        <navigator url='/pages/game/gameDynamic/gameDynamic'>
          <image src="../../../images/icon_intro.png" style="width:60rpx;height:60rpx"/>
        </navigator>
      </view>
    </view>
  </view>
  <view class="zan-popup {{ showJoin ? 'zan-popup--show' : ''}}">
    <view class="zan-popup__mask"></view>
    <view class="zan-popup__container" style="background:none">
      <button class="btn follow" bindtap="followGame">关注赛事</button>
      <button class="btn join" bindtap="joinGame">加入比赛</button>
    </view>
  </view>
  <view class="popup-example--bottom zan-popup zan-popup--bottom {{ showPopup ? 'zan-popup--show' : ''}}">
    <view class="zan-popup__mask" catchtap="togglePopup"></view>
    <view class="zan-popup__container">
      <scroll-view scroll-x="true" style=" white-space: nowrap; display: flex;padding:20rpx 0 0 0" >
        <view style="width: 120rpx; height: 120rpx; display: inline-block"
          wx:for='{{holes}}' wx:key="{{item}}" id='{{item.name}}' bindtap='holeChange' 
          class="{{activeHole == item.name ? 'hole-on' : 'hole-off'}}">
          <view class="weui-grid__label {{activeHole == item.name ? 'hole-on' : 'hole-off'}}">{{item.name}}</view>
          <view class="weui-grid__label {{activeHole == item.name ? 'hole-on' : 'hole-off'}}">{{item.role}}</view>
        </view>
      </scroll-view>
      <view class="weui-cells weui-cells_after-title text-size-14">
        <view class="weui-cell weui-cell_access line">
          <view class='weui-flex' style='width:100%;padding:15rpx 0'>
            <view class="weui-flex__item">
              <image class="weui-grid__icon" src="../../../images/pic_160.png" />
            </view>
            <view class="text-size-14" style='line-height:50px;text-align:center'>用户1</view>
            <view class="weui-flex__item" style='text-align:center'>
              <view class="text-size-14" style='line-height:50px;text-align:center'>总杆</view>
            </view>
            <view class="weui-flex__item" style='text-align:right'>
              <view class="tui-gallery-list">
                <view class="tui-number-group">
                  <view class="tui-number-cell" bindtap="nextNum" disabled='{{disabled1}}'>-</view>
                  <input class="tui-number-cell in" type="number" value='{{number1}}' bindblur='numberChange'
                    data-min="1" data-max="100"></input>
                  <view class="tui-number-cell" bindtap="prevNum" disabled='{{disabled2}}'>+</view>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-cell weui-cell_access line">
          <view class='weui-flex' style='width:100%;padding:15rpx 0'>
            <view class="weui-flex__item">
              <image class="weui-grid__icon" src="../../../images/pic_160.png" />
            </view>
            <view class="text-size-14" style='line-height:50px;text-align:center'>用户2</view>
            <view class="weui-flex__item" style='text-align:center'>
              <view class="text-size-14" style='line-height:50px;text-align:center'>总杆</view>
            </view>
            <view class="weui-flex__item" style='text-align:right'>
              <view class="tui-gallery-list">
                <view class="tui-number-group">
                  <view class="tui-number-cell" bindtap="nextNum" disabled='{{disabled1}}'>-</view>
                  <input class="tui-number-cell in" type="number" value='{{number1}}' bindblur='numberChange'
                    data-min="1" data-max="100"></input>
                  <view class="tui-number-cell" bindtap="prevNum" disabled='{{disabled2}}'>+</view>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-cell weui-cell_access line">
          <view class='weui-flex' style='width:100%;padding:15rpx 0'>
            <view class="weui-flex__item">
              <image class="weui-grid__icon" src="../../../images/pic_160.png" />
            </view>
            <view class="text-size-14" style='line-height:50px;text-align:center'>用户4</view>
            <view class="weui-flex__item" style='text-align:center'>
              <view class="text-size-14" style='line-height:50px;text-align:center'>总杆</view>
            </view>
            <view class="weui-flex__item" style='text-align:right'>
              <view class="tui-gallery-list">
                <view class="tui-number-group">
                  <view class="tui-number-cell" bindtap="nextNum" disabled='{{disabled1}}'>-</view>
                  <input class="tui-number-cell in" type="number" value='{{number1}}' bindblur='numberChange'
                    data-min="1" data-max="100"></input>
                  <view class="tui-number-cell" bindtap="prevNum" disabled='{{disabled2}}'>+</view>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-cell weui-cell_access line">
          <view class='weui-flex' style='width:100%;padding:15rpx 0'>
            <view class="weui-flex__item">
              <image class="weui-grid__icon" src="../../../images/pic_160.png" />
            </view>
            <view class="text-size-14" style='line-height:50px;text-align:center'>用户3</view>
            <view class="weui-flex__item" style='text-align:center'>
              <view class="text-size-14" style='line-height:50px;text-align:center'>总杆</view>
            </view>
            <view class="weui-flex__item" style='text-align:right'>
              <view class="tui-gallery-list">
                <view class="tui-number-group">
                  <view class="tui-number-cell" bindtap="nextNum" disabled='{{disabled1}}'>-</view>
                  <input class="tui-number-cell in" type="number" value='{{number1}}' bindblur='numberChange'
                    data-min="1" data-max="100"></input>
                  <view class="tui-number-cell" bindtap="prevNum" disabled='{{disabled2}}'>+</view>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-cell weui-cell_access line" id="4" bindtap="popuChange">
          <button class="weui-btn" type="primary" style="width:100%;background:#66CC99"
           bindtap="saveScore">保存</button>
        </view>
      </view>
    </view>
  </view>
</view>