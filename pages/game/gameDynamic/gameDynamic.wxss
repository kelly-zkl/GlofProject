
.weui-btn.send{
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  height: 90rpx;
  background: #66CC99;
  border: 8rpx #fff solid;
  border-radius: 45rpx;
  color: #fff;
  font-size: 14px;
  text-align: center;
  padding: auto 30rpx;
  display: flex;
  align-items: center;
}

.weui-media-box__thumb.d1{
  width: 40px;
  height: 40px;
}
.weui-media-box__info.d1{
  margin-top:0;padding-bottom:0;
}
.weui-media-box__hd_in-appmsg.d1{margin-right:.4em;width:40px;height:40px;line-height:40px;text-align:center}
.weui-panel__ft{
  margin: 0 0 0 48px;
  padding-top: 10rpx;
}
.weui-media-box.d1{padding-bottom:0}
.weui-uploader__file{float:left;margin-right:4px;margin-bottom:4px}
.weui-uploader__img{display:block;width:84px;height:84px}
.weui-uploader__input-box{margin-right:4px;margin-bottom:4px;width:82px;height:82px;}
.weui-cell__bd.re{
  text-align: left;
}
.text-blue{color:#2C7AD6}
.reply{
  display: inline;
  box-sizing:border-box;
}
.weui-panel__ft.text-size-13{
  margin: 0
}

.zan-popup__container{
  border-radius: 8px;
  width: 95%;
  background: #F0EFF4
}
.score-img{
  width:180rpx;
  height:180rpx;
  border:10rpx #F0EFF4 solid;
  margin-top:-100rpx;
  border-radius: 50%;
  margin-left: auto;
  margin-right: auto;
}
/** 老鹰、小鸟、柏忌*/
.bogey-score{
  width: 86%;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  border-radius: 6rpx;
  background: #006EAB;
  margin: 5rpx 7%;
  font-size: 14px
}
.eagle-score{
  background: #F39B3A
}
.bird-score{
  background: #CD3029
}
.dbogey-score{
  background: #101614
}
.zero-score{
  background: transparent;
  color: #333
}

