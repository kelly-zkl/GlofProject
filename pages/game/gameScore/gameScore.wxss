/** 老鹰、小鸟、柏忌*/
.bogey-score{
  width: 70%;
  height: 24px;
  line-height: 24px;
  color: #fff;
  text-align: center;
  border-radius: 4px;
  background: #006EAB;
  margin: 8px 15%;
  font-size: 14px
}
.eagle-score{
  background: #F39B3A
}
.bird-score{
  background: #CD3029
}
.dbogey-score{
  background: #101614
}
.hole-9{
  background: transparent;
}
.zero-score{
  background: transparent;
  color: #333
}