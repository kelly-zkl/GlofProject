<view class="page">
  <view class="page__bd">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000">
      <block wx:for="{{imgUrls}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="weui-flex" style="background:#fff;padding:30rpx 0px">
      <navigator url="/pages/game/findGame/findGame?tab=0" class="weui-flex__item">
        <image class="weui-grid__icon" src="../../../images/icon_intro.png" />
        <view class="weui-grid__label" style="color:#999">今日赛事</view>
      </navigator>
      <navigator url="/pages/game/findGame/findGame?tab=2" class="weui-flex__item">
        <image class="weui-grid__icon" src="../../../images/icon_intro.png" />
        <view class="weui-grid__label" style="color:#999">约球专区</view>
      </navigator>
      <navigator url="/pages/court/courts/courts" class="weui-flex__item">
        <image class="weui-grid__icon" src="../../../images/icon_intro.png" />
        <view class="weui-grid__label" style="color:#999">附近球场</view>
      </navigator>
      <navigator url="/pages/coach/coachs/coachs" class="weui-flex__item">
        <image class="weui-grid__icon" src="../../../images/icon_intro.png" />
        <view class="weui-grid__label" style="color:#999">教练专区</view>
      </navigator>
    </view>
    <view class="weui-panel weui-panel_access" style="margin-top:0">
      <view class="weui-panel__hd">约球</view>
      <view class="weui-panel__bd">
        <navigator url="/pages/game/gameDetail/gameDetail" class="weui-media-box weui-media-box_appmsg"
          hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="../../../images/icon_intro.png"/>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title weui-media-box__title_in-text text-size-14">深圳小聚</view>
            <view class="weui-media-box__desc text-size-13">深圳名商高尔夫球会</view>
            <view class="weui-media-box__info" style="color:#999">23：00</view>
          </view>
          <view class="weui-cell__ft">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title weui-media-box__title_in-text text-size-14">深圳小聚</view>
              <view class="weui-media-box__desc">2.8Km</view>
              <view class="weui-media-box__info" style="color:#999">23人关注</view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">今日赛事</view>
      <view class="weui-panel__bd">
        <navigator url="/pages/game/gameDetail/gameDetail" class="weui-media-box weui-media-box_appmsg"
          hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="../../../images/icon_intro.png"/>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title weui-media-box__title_in-text text-size-14">深圳小聚</view>
            <view class="weui-media-box__desc text-size-13">深圳名商高尔夫球会</view>
            <view class="weui-media-box__info" style="color:#999">23：00</view>
          </view>
          <view class="weui-cell__ft">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title weui-media-box__title_in-text text-size-14">深圳小聚</view>
              <view class="weui-media-box__desc">2.8Km</view>
              <view class="weui-media-box__info" style="color:#999">23人关注</view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
</view>