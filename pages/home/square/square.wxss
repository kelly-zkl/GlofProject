.view-card{
  width: 70%; 
  height:280rpx;
  line-height: 280rpx;
  display: inline-block;
  border:1px #CCCCCC solid;
  margin:20rpx 0 20rpx 20rpx;
  background: #fff;
  border-radius: 30rpx;
  text-align: center;
  color: #ccc;
}
.view-card:last-child{
  margin-right: 20rpx
}

.weui-grid__icon.img{
  width: 50px;
  height: 50px
}

.ball-scrow{
  white-space: nowrap; 
  width:100%;
  height:210rpx;
  background: #fff
}
.weui-panel:after{border-bottom: none}
.ball-card{
  width: 60%; 
  height:170rpx;
  display: inline-block;
  background: #F2F2F2;
  margin: 20rpx 20rpx 20rpx 0;
}
.ball-btn{
  width: 100rpx;
  height:170rpx;
  line-height: 170rpx;
  display: inline-block;
  font-size: 14px;
  color: #66CC99 ;
  margin: 20rpx 20rpx 20rpx 30rpx;
  text-align: center;
  border: 1rpx #66CC99 solid;
  background: #fff;
  padding: 0;
  border-radius: 10rpx;
}
.weui-media-box__desc.ball{
  line-height: 1
}
.weui-media-box__title_in-text.ball{margin-bottom:0}
.weui-media-box.ball{padding:20rpx;position:relative}
.weui-media-box__hd_in-appmsg{margin-right:.5em;width:130rpx;height:130rpx;line-height:130rpx;text-align:center}