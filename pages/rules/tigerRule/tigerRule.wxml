<view class='page'>
  <view class='page__bd'>
    <view class="weui-cell" style='background:#fff;padding: 30rpx'>
      <view class="weui-cell__bd" style='color:#66CC99'>打老虎</view>
      <view class="weui-cell__ft" style='text-align:right'>
        <view class="tui-gallery-list" style='text-align:right'>
          <view class="tui-number-group">
            <view class="tui-number-cell" bindtap="nextNum">基本单位</view>
            <input class="tui-number-cell in" type="number" value='{{number1}}' bindblur='numberChange'
              data-min="1"></input>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell text-size-14">
        <view class="weui-cell__bd">设置老虎</view>
      </view>
      <radio-group bindchange="radioChange" class="weui-flex" style="padding:30rpx 0px">
        <view class="weui-flex__item">
          <image class="weui-grid__icon" src="../../../images/pic_160.png" />
          <view class="weui-grid__label">用户1</view>
          <radio class="weui-check" color="#66CC99" checked='true'/>
        </view>
        <view class="weui-flex__item">
          <image class="weui-grid__icon" src="../../../images/pic_160.png" />
          <view class="weui-grid__label">用户2</view>
          <radio class="weui-check" color="#66CC99"/>
        </view>
        <view class="weui-flex__item">
          <image class="weui-grid__icon" src="../../../images/pic_160.png" />
          <view class="weui-grid__label">用户3</view>
          <radio class="weui-check" color="#66CC99"/>
        </view>
        <view class="weui-flex__item">
          <image class="weui-grid__icon" src="../../../images/pic_160.png" />
          <view class="weui-grid__label">用户4</view>
          <radio class="weui-check" color="#66CC99"/>
        </view>
      </radio-group>
      <view class="weui-cell text-size-14">
        <view class="weui-cell__bd">分类</view>
        <view class="weui-cell__ft">
          <view class="tui-tabbar-group">
            <text class="tui-tabbar-cell {{radioType == 0 ? 'tui-active' : ''}}"
              data-id="0" bindtap="douChange" >比洞</text>
            <text class="tui-tabbar-cell {{radioType == 1 ? 'tui-active' : ''}}"
              data-id="1" bindtap="douChange" >比杆</text>
          </view>
        </view>
      </view>
      <view class="weui-cell text-size-14">
        <view class="weui-cell__bd">顶洞</view>
        <view class="weui-cell__ft">
          <view class="tui-tabbar-group">
            <text class="tui-tabbar-cell {{radioDing == 0 ? 'tui-active' : ''}}"
              data-id="0" bindtap="dingChange" >顶洞过</text>
            <text class="tui-tabbar-cell {{radioDing == 1 ? 'tui-active' : ''}}"
              data-id="1" bindtap="dingChange" >顶洞+1</text>
            <text class="tui-tabbar-cell {{radioDing == 2 ? 'tui-active' : ''}}"
              data-id="2" bindtap="dingChange" >顶洞翻倍</text>
          </view>
        </view>
      </view>
      <view class="weui-cell text-size-14">
        <view class="weui-cell__bd">收顶洞</view>
        <view class="weui-cell__ft">
          <view class="tui-tabbar-group">
            <text class="tui-tabbar-cell {{radioShou == 0 ? 'tui-active' : ''}}"
              data-id="0" bindtap="shouChange" >赢洞全收</text>
            <text class="tui-tabbar-cell {{radioShou == 1 ? 'tui-active' : ''}}"
              data-id="1" bindtap="shouChange" >帕鸟鹰全收</text>
          </view>
        </view>
      </view>
      <view class="weui-cell text-size-14">
        <view class="weui-cell__bd">避开地雷</view>
        <view class="weui-cell__ft"><switch color='#66CC99'></switch></view>
      </view>
    </view>
  </view>
  <view class="weui-footer weui-footer_fixed-bottom" 
    style="padding:30rpx;background:#fff;border-top:1rpx #e5e5e5 solid">
    <button class="weui-btn" type="primary" style="background:#66CC99" bindtap='saveSet'>保存设置</button>
  </view>
</view>