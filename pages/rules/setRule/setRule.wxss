
page{
  background: #fff
}
.weui-grid__icon{display:block;width:50px;height:50px;margin:0 auto}
.weui-flex__item{
  position: relative
}

.weui-check{
  position: absolute;
  top: -15px;
  left: 10px
}

.weui-cell{
  height: 60px;
  background: #fff;
  padding: 0;
  margin: 0 30rpx 20rpx 30rpx;
  border: 1rpx #e5e5e5 solid;
  border-radius: 10rpx
}
.weui-cell__hd,{
  height: 60px;
  margin: 0;
  padding: 0
}
.weui-cell__bd{
  color: #66CC99;
  font-size: 15px;
  margin-left: 30rpx
}

.weui-cell__hd image{
  margin-top: 4px;
  width: 60px;height: 60px;
  border-radius: 10rpx 0 0 10rpx;
}