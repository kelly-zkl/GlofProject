<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_appmsg">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{userInfo.avatarUrl}}"/>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{userInfo.name}}</view>
            <view class="weui-media-box__desc">{{userInfo.city}} {{userInfo.province}}</view>
          </view>
          <view class="weui-cell__ft" hidden="{{person != 0}}" bindtap="gotoPost">
            <image src="{{icon20}}" class="icon-size"/>
          </view>
          <view class="weui-cell__ft" hidden="{{person != 1}}">
            <image src="../../../images/icon_intro.png" class="icon-size"/>
            <image src="../../../images/pic_160.png" class="icon-size"/>
          </view>
        </view>
      </view>
    </view>
    <view class="msg-info">个人简介个人简介个人简介个人简介个人简介个人简介</view>
    <view class="weui-flex p1">
      <view class="weui-flex__item p1">
        <view class="weui-grid__label" style="margin-top:30rpx">2</view>
        <view class="weui-grid__label" style="color:#999;margin-top:0px;margin-bottom:30rpx">球龄</view>
      </view>
      <view class="weui-flex__item p1">
        <view class="weui-grid__label" style="margin-top:30rpx">2</view>
        <view class="weui-grid__label" style="color:#999;margin-top:0px;margin-bottom:30rpx">差点</view>
      </view>
      <view class="weui-flex__item p1">
        <view class="weui-grid__label" style="margin-top:30rpx">2</view>
        <view class="weui-grid__label" style="color:#999;margin-top:0px;margin-bottom:30rpx">最好成绩</view>
      </view>
      <view class="weui-flex__item p1">
        <view class="weui-grid__label" style="margin-top:30rpx">2</view>
        <view class="weui-grid__label" style="color:#999;margin-top:0px;margin-bottom:30rpx">平均成绩</view>
      </view>
    </view>
    <view style="padding:20rpx 30rpx 30rpx 30rpx;background:#fff">
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签1</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签2</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签3</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签4</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签5</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签6</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签7</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签8</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签9</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签10</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签11</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签12</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签13</view>
      <view class="zan-tag zan-tag--primary zan-tag--plain">标签14</view>
    </view>
    <view wx:for="{{dynamics}}" wx:key="*this">
      <view class="weui-panel weui-panel_access d1" style="padding:30rpx;margin-top:1rpx">
        <view class="weui-panel__bd d1">
          <view class="weui-media-box weui-media-box_appmsg d1"  style="padding:0">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg d1">
              <image class="weui-media-box__thumb d1" src="{{item.creatorAvatar}}"/>
            </view>
            <view class="weui-media-box__title weui-media-box__title_in-text d1"  style="margin-bottom:0">
              <view class="weui-media-box__title text-size-14 d1">{{item.creatorName}}</view>
              <view class="weui-media-box__info text-size-12 d1" style="color:#999">{{item.createTime}}</view>
            </view>
          </view>
        </view>
        <view class="weui-panel__ft text-size-14 d1">
          <view class="weui-cell__bd" style="padding-bottom:10rpx" wx:show="{{item.content.length > 0}}">
          {{item.content}}</view>
          <view class="weui-cell__bd" wx:show="{{item.attach.length > 0}}">
            <view class="weui-uploader">
              <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploaderFiles">
                  <block wx:for="{{item.attach}}" wx:key="*this">
                    <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                      <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                    </view>
                  </block>
                </view>
              </view>
            </view>
          </view>
          <view class="weui-flex" style="background:#fff;padding-top:20rpx">
            <view class="weui-flex__item">
              <view class="weui-grid__label" style="color:#999">打赏</view>
            </view>
            <view class="weui-flex__item">
              <view class="weui-grid__label" style="color:#999">评论</view>
            </view>
            <view class="weui-flex__item">
              <view class="weui-grid__label" style="color:#999">点赞</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>